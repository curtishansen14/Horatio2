@model IEnumerable<Horatio_2._0.Models.UserQuest>

@{
    ViewBag.Title = "Index";
}
<br />
<br />
<br />

<h2>Profile</h2>
    <table class="table">
        <tr>
 
            <th>
                @Html.DisplayNameFor(model => model.Quest.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isComplete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Target)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Quest.Title)
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.isActive)
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.isComplete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Target)
            </td>
            <td>
                <input type="button" style="background-color:plum; color: white;" value="View" onclick="@("window.location.href='" + @Url.Action("Edit", "UserQuests", new { id = item.UserQuestID }) + "'");" />
   
            </td>
        </tr>
    }
    
    </table>

